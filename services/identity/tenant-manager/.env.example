# Server Configuration
PORT=8082
GRPC_PORT=9082
ENV=development
LOG_LEVEL=debug

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5436
DATABASE_NAME=cotai_identity
DATABASE_USER=cotai_dev
DATABASE_PASSWORD=dev_password
DATABASE_MAX_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300s
DATABASE_SSL_MODE=disable

# Migrations
MIGRATIONS_PATH=file://migrations/tenant_schema

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_TENANT_LIFECYCLE=tenant.lifecycle
KAFKA_CLIENT_ID=tenant-manager
KAFKA_ACKS=1
KAFKA_COMPRESSION=snappy
KAFKA_MAX_RETRY=3

# JWT Configuration
JWT_PUBLIC_KEY_URL=http://localhost:8080/realms/cotai/protocol/openid-connect/certs
JWT_ISSUER=http://localhost:8080/realms/cotai
JWT_AUDIENCE=cotai-backend-services

# Observability
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=tenant-manager
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1
PROMETHEUS_ENABLED=true
